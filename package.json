{
  "name": "numerology-app",
  "version": "1.0.0",
  "private": true,
  "description": "Numerology app packaged for Android via Capacitor",
  "scripts": {
    "build": "node scripts/build-web.js",
    "android:add": "npx cap add android",
    "android:sync": "npm run build && npx cap sync android",
    "android:open": "npx cap open android",
    "android:apk": "bash scripts/build-apk.sh"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.0",
    "@capacitor/core": "^6.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.0"
  }
}
